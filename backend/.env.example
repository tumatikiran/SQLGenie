# =============================
# MS SQL Server (read-only user)
# =============================
MSSQL_DRIVER=ODBC Driver 18 for SQL Server
MSSQL_SERVER=ServerName
MSSQL_PORT=1433
MSSQL_DATABASE=DatabaseName
MSSQL_USERNAME=Username
MSSQL_PASSWORD=Password

# Recommended for local dev; set to true only if you understand the implications.
MSSQL_TRUST_SERVER_CERTIFICATE=true
# If your SQL Server requires encryption, set true.
MSSQL_ENCRYPT=false

# Query settings
MSSQL_QUERY_TIMEOUT_SECONDS=30

# =============================
# Gemini
# =============================
GOOGLE_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-flash

# =============================
# API
# =============================
CORS_ORIGINS=http://localhost:5173
LOG_LEVEL=INFO
